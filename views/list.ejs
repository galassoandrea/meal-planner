            <!-- Form used to add a new item  -->
            <form action="/" method="post">
                <div class="input-container">
                    <input class="item-input" type="text" name="item" id="" placeholder="Add some food">
                    <button class="item-submit" name="list" value="dinner" type="submit"><i
                            class="fa-solid fa-circle-plus fa-3x"></i></button>
                </div>
            </form>
        </div>
    </div>

</body>

</html>