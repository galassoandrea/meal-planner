<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meal Planner</title>

    <!-- Custom stylesheet -->
    <link rel="stylesheet" href="css/styles.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Andika+New+Basic&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/4da8dbf234.js" crossorigin="anonymous"></script>

</head>

<body>
    <div class="container">
        <div class="card lunch-card">

            <!-- Form used to delete an item  -->
            <form action="/delete" method="post">
                <h2 class="card-title">Lunch</h2>
                <% for(let i = 0; i < lunchList.length; i++) { %>
                <div class="card-items">
                    <input type="checkbox" name="checkbox" value="<%= i %>" onchange="this.form.submit()">
                    <p class="item"><%= lunchList[i] %></p>
                </div>
                <% } %>
                <input type="hidden" name="list" value="lunch">
            </form>

            <!-- Form used to add a new item  -->
            <form action="/" method="post">
                <div class="input-container">
                    <input class="item-input" type="text" name="item" id="" placeholder="Add some food">
                    <button class="item-submit" name="list" value="lunch" type="submit"><i
                            class="fa-solid fa-circle-plus fa-3x"></i></button>
                </div>
            </form>
        </div>
        <div class="card-group">
            <div class="card breakfast-card">

                <!-- Form used to delete an item  -->
