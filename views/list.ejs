                    <div class="input-container">
                        <input class="item-input" type="text" name="item" id="" placeholder="Add some food">
                        <button class="item-submit" name="list" value="snack" type="submit"><i
                                class="fa-solid fa-circle-plus fa-3x"></i></button>
                    </div>
                </form>
            </div>
        </div>
        <div class="card dinner-card">

            <!-- Form used to delete an item  -->
            <form action="/delete" method="post">
                <h2 class="card-title">Dinner</h2>
                <% for(let i = 0; i < dinnerList.length; i++) { %>
